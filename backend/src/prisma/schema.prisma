model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  auth0_id  String   @unique
  tasks     Task[]
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus
  deadline    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

